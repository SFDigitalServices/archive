{
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "develop": "run-p start test:watch",
    "lint": "eslint .",
    "start": "nodemon --config config/nodemon.develop.json server.js",
    "test": "run-s test:unit test:features",
    "test:features": "cucumber-js --config config/cucumber.js",
    "test:watch": "watchy -d 1 -w '**/*.feature' -w '{src,}/**/*.js' -w 'sites/**' -w package.json -w .env -- npm test",
    "test:unit": "jest --passWithNoTests"
  },
  "dependencies": {
    "anymatch": "^3.1.2",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "globby": "^11.1.0",
    "js-yaml": "^4.1.0",
    "nodemon": "^2.0.18",
    "npm-run-all": "^4.1.5",
    "vhost": "^3.0.2"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^8.4.0",
    "eslint": "^8.19.0",
    "eslint-plugin-sfgov": "^2.0.0",
    "eslint-plugin-unicorn": "^43.0.1",
    "expect": "^27.5.1",
    "jest": "^28.1.2",
    "node-fetch": "^2.6.7",
    "watchy": "^0.10.0"
  }
}
